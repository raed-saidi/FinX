# Backend Environment Variables
# Copy this file to .env and fill in your values

# Groq AI API Key (for chat assistant)
GROQ_API_KEY=your_groq_api_key_here

# Alpaca Paper Trading API (get from https://alpaca.markets)
ALPACA_API_KEY=your_alpaca_api_key_here
ALPACA_SECRET_KEY=your_alpaca_secret_key_here
ALPACA_BASE_URL=https://paper-api.alpaca.markets

# FRED API Key (for economic data - get from https://fred.stlouisfed.org/docs/api/api_key.html)
FRED_API_KEY=your_fred_api_key_here

# Qdrant Vector Database (get from https://cloud.qdrant.io/)
QDRANT_API_KEY=your_qdrant_api_key_here
QDRANT_CLOUD_URL=https://your-cluster.cloud.qdrant.io:6333

# Server Configuration
HOST=0.0.0.0
PORT=8000

# Security (GENERATE STRONG SECRETS IN PRODUCTION!)
# Generate with: python -c "import secrets; print(secrets.token_urlsafe(64))"
JWT_SECRET=change_this_to_a_random_string_in_production
# Generate with: python -c "import secrets; print(secrets.token_hex(32))"
PASSWORD_SALT=change_this_salt_in_production

# CORS (add your frontend URL in production)
CORS_ORIGINS=http://localhost:3000,https://your-frontend-domain.com
